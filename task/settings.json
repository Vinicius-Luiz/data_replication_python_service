{
    "task": {
        "task_name": "replicacao_employees_feminino",
        "replication_type": "full_load_and_cdc",
        "interval_seconds": 5,
        "start_mode": "reload",
        "create_table_if_not_exists": true,
        "full_load_settings": {
            "recreate_table_if_exists": false,
            "truncate_before_insert": true
        },
        "cdc_settings": {
            "mode": "upsert",
            "scd2_settings": {
                "start_date_column_name": "scd_start_date",
                "end_date_column_name": "scd_end_date",
                "current_column_name": "scd_current"
            }
        }
    },
    "error_handling": {
        "stop_if_insert_error": false,
        "stop_if_update_error": false,
        "stop_if_delete_error": false,
        "stop_if_upsert_error": false
    },
    "tables": [
        {
            "schema_name": "employees",
            "table_name": "employee",
            "priority": 2
        }
    ],
    "filters": [
        {
            "table_info": {
                "schema_name": "employees",
                "table_name": "employee"
            },
            "settings": {
                "filter_type": "equals",
                "description": "Filtrar apenas funcionárias do gênero feminino",
                "column_name": "gender",
                "value": "F"
            }
        },
        {
            "table_info": {
                "schema_name": "employees",
                "table_name": "employee"
            },
            "settings": {
                "filter_type": "in",
                "description": "Filtrar funcionárias com os nomes Dipankar, Tetsushi e Kristin",
                "column_name": "first_name",
                "values": [
                    "Dipankar",
                    "Tetsushi",
                    "Kristin"
                ]
            }
        }
    ],
    "transformations": [
        {
            "table_info": {
                "schema_name": "employees",
                "table_name": "employee"
            },
            "settings": {
                "transformation_type": "create_column",
                "description": "Criar coluna full_name concatenando first_name e last_name",
                "contract": {
                    "operation": "concat",
                    "new_column_name": "full_name",
                    "depends_on": [
                        "first_name",
                        "last_name"
                    ],
                    "separator": " "
                },
                "priority": 3
            }
        }
    ]
}