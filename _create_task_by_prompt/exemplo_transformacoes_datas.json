{
    "task": {
        "task_name": "exemplo_transformacoes_datas",
        "replication_type": "full_load",
        "interval_seconds": 60,
        "start_mode": "reload",
        "create_table_if_not_exists": true,
        "full_load_settings": {
            "recreate_table_if_exists": true,
            "truncate_before_insert": true
        }
    },
    "error_handling": {
        "stop_if_insert_error": false,
        "stop_if_update_error": false,
        "stop_if_delete_error": false,
        "stop_if_upsert_error": false
    },
    "tables": [
        {
            "schema_name": "recursos_humanos",
            "table_name": "funcionarios",
            "priority": 1
        }
    ],
    "filters": [],
    "transformations": [
        {
            "table_info": {
                "schema_name": "recursos_humanos",
                "table_name": "funcionarios"
            },
            "settings": {
                "transformation_type": "create_column",
                "description": "Criar coluna com a data atual de sincronização",
                "contract": {
                    "operation": "date_now",
                    "new_column_name": "data_sincronizacao"
                },
                "priority": 1
            }
        },
        {
            "table_info": {
                "schema_name": "recursos_humanos",
                "table_name": "funcionarios"
            },
            "settings": {
                "transformation_type": "create_column",
                "description": "Calcular tempo de empresa em anos",
                "contract": {
                    "operation": "date_diff_years",
                    "new_column_name": "tempo_empresa_anos",
                    "depends_on": [
                        "data_admissao",
                        "data_demissao"
                    ]
                },
                "priority": 2
            }
        },
        {
            "table_info": {
                "schema_name": "recursos_humanos",
                "table_name": "funcionarios"
            },
            "settings": {
                "transformation_type": "modify_column_value",
                "description": "Formatar data de admissão para dd/mm/yyyy",
                "contract": {
                    "operation": "format_date",
                    "column_name": "data_admissao",
                    "format": "%d/%m/%Y"
                },
                "priority": 3
            }
        },
        {
            "table_info": {
                "schema_name": "recursos_humanos",
                "table_name": "funcionarios"
            },
            "settings": {
                "transformation_type": "create_column",
                "description": "Extrair ano da admissão",
                "contract": {
                    "operation": "extract_year",
                    "column_name": "data_admissao",
                    "new_column_name": "ano_admissao"
                },
                "priority": 4
            }
        }
    ]
} 